<div class="col-md-6">
  <h2>Volunteer name: <%= @volunteer.name() %></h2>
</div>
<div class="col-md-6">
  <form action="/volunteers/<%= @volunteer.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <div class="form-group">
      <label for="name">name</label>
      <input class="form-control" type="text" name="name">
    </div>
    <div class="btn-group">
      <button class="btn btn-primary" type="submit">Update Volunteer</button>
    </div>
  </form>
  <br>
  <form class="float" action="/volunteers/<%= @volunteer.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <div class="btn-group float">
      <button class="btn btn-primary" type="submit">Delete Volunteer</button>
    </div>
  </form>
</div>
