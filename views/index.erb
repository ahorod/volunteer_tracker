<div class="row">
  <div class="col-md-6">
    <div class="panel-success">
      <div class="panel-heading">
        <div class="panel-title">
          <h4>Projects</h4>
        </div>
      </div>
      <div class="panel-body">
        <ul>
          <% @projects.each() do |project| %>
            <li><a href="/projects/<%= project.id() %>"><%= project.name() %></a></li>
          <% end %>
        </ul>
        <hr>
        <form action="/add_project" method="post">
          <div class="form-group">
            <label for="project_name">Project Name</label>
            <input class="form-control" type="text" name="project_name">
          </div>
          <div class="form-group">
            <label for="info">Description</label>
            <input class="form-control" type="text" name="info">
          </div>
          <div class="btn-group">
            <button class="btn btn-success" type="submit">Add Project</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel-warning">
      <div class="panel-heading">
        <div class="panel-title">
          <h4>Volunteers</h4>
        </div>
      </div>
      <div class="panel-body">
        <ul>
          <% @volunteers.each() do |volunteer| %>
            <li><a href="/volunteers/<%= volunteer.id() %>"><%= volunteer.name() %></a></li>
          <% end %>
        </ul>
        <hr>
        <form action="/add_volunteer" method="post">
          <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" name="name">
          </div>
          <div class="btn-group">
            <button class="btn btn-warning" type="submit">Add Volunteer</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
